{
  "name": "lottery",
  "version": "1.0.0",
  "description": "A lottery application",
  "scripts": {
    "build": "TSX_TSCONFIG_PATH=./scripts/tsconfig.json tsx ./scripts/build.ts",
    "check": "tsx --env-file=.env ./src/cli.ts",
    "commitlint": "commitlint --config ./eng/.commitlintrc.json --edit",
    "cspell": "cspell --config ./eng/cspell.config.json --quiet .",
    "eslint": "eslint --config ./eng/eslint.config.js .",
    "lint": "npm run cspell && npm run eslint",
    "lint:staged": "lint-staged --config ./eng/.lintstagedrc.json",
    "postinstall": "husky || true",
    "prebuild": "tsc -b ./tsconfig.json --emitDeclarationOnly"
  },
  "author": "Dunn",
  "license": "MIT",
  "devDependencies": {
    "@camaro/eslint-config": "^2.0.1",
    "@camaro/tsconfig": "^1.1.1",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/node": "^22.14.1",
    "cspell": "^8.18.1",
    "esbuild": "^0.25.2",
    "eslint": "^9.24.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "commander": "^13.1.0",
    "cron": "^4.3.0",
    "mysql2": "^3.14.0"
  }
}
